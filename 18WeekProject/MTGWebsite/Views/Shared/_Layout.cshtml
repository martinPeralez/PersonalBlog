<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - NEXT Website</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar">
        <div class="navbar__container">
            <a href="/" id="navbar__logo">My Blog</a>
            <div class="navbar__toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
            <ul class="navbar__menu">
                <li class="navbar__item">
                    <a asp-action="Index" class="navbar__links">Home</a>
                </li>
                <li class="navbar__item">
                    <a asp-action="Privacy" class="navbar__links">About</a>
                </li>
                <li class="navbar__item">
                    <a asp-action="Index" class="navbar__links">Programs</a>
                </li>
                <li class="navbar__btn">
                    <a asp-action="Index" class="button">Sign Up</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MTGWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>